<tr>
  <td><%= link_to article.id, admin_article_path(article) %></td>
  <td><%= article.title %></td>
  <td><%= article.content %></td>
  <td><%= article.year %></td>
  <td><%= article.month %></td>
  <td><%= l article.created_at %></td>
  <td><%= l article.updated_at %></td>
  <td>
    <div class="btn-group">
      <%= link_to("編集", edit_admin_article_path(article), { class: "btn btn-default btn-sm mr-2" }) %>
      <%# Rails 7 からこの書き方だとダメ。こういう変なノウハウをやめたい %>
      <%#= link_to("削除", admin_article_path(article), method: :delete, class: "btn btn-default btn-sm") %>
      <%= button_to("削除", admin_article_path(article), method: :delete, class: "btn btn-default btn-sm") %>
    </div>
  </td>
</tr>
