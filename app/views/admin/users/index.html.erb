<% content_for(:title, "ユーザー一覧") %>

<% content_for :breadcrumb do %>
  <ol class="breadcrumb float-sm-right">
    <li class="breadcrumb-item"><a href="#">Home</a></li>
    <li class="breadcrumb-item active">ユーザー一覧</li>
  </ol>
<% end %>

<% content_for :menu_setting do %>
  <% @menu = :user %>
<% end %>

<div class="row">

  <div class="col-12">
    <div class="card">
      <div class="card-header">
      </div>
      <div class="card-body">
        <div class="mt-3">
          <%#= paginate @users, views_prefix: "admin" %>
        </div>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th style="width: 10px">ID</th>
              <th>メールアドレス</th>
              <th>ニックネーム</th>
              <th>会員種別</th>
              <th>作成日時</th>
              <th>更新日時</th>
            </tr>
          </thead>

          <tbody>
            <%= render @users %>
          </tbody>
        </table>
        <div class="mt-3">
          <%#= paginate @users, views_prefix: "admin" %>
        </div>
      </div>
    </div>      
  </div>      

</div>
<!-- /.row -->
